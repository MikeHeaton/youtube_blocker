 {
    "name": "Youtube Blocker",
    "version": "1.0",
    "description": "Block youtube videos!",
    "manifest_version": 2,
    "icons": {
      "16": "images/lotus_16.png",
      "32": "images/lotus_32.png",
      "128": "images/lotus_128.png"
    },
    "permissions": ["declarativeContent", "storage", "activeTab"],
    "content_scripts": [{
      "matches": ["*://*.youtube.com/*"],
      "js": ["utils.js", "content.js"]
    }],
    "background": {
      "scripts": ["storage.js", "utils.js", "background.js"],
      "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/lotus_16.png",
        "32": "images/lotus_32.png",
        "128": "images/lotus_128.png"
      }
    }
  }
